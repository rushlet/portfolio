<section id="portfolio" class="portfolio">
    <h2>Portfolio</h2>
    <div class="portfolio-section">
        <div class="portfolio-filters" style="display:none">
            <label id="filters-label" class="portfolio-filters--cta">Use the radio buttons below to filter my work</label>
            <ul role="radiogroup" aria-labelledby="filters-label">
                {{#each filters}}
                <li>
                    {{> portfolio-filter this}}
                </li>
                {{/each}}
            </ul>
        </div>
        <ul class="portfolio-grid">
        {{#each items as |item|}}
            <li class="portfolio-item {{filters}}">
                {{> portfolio-item item}}
            </li>
        {{/each}}
        </ul>
    </div>
</section>
