<div class="portfolio-item--container no-js">
    <img src={{img-src}} class="portfolio-item--img" loading="lazy">
    <h3 class="portfolio-item--title">{{title}}</h3>
    <p class="portfolio-item--description">{{desc}}</p>
    <details class="portfolio-item--details">
      <summary>Find out more</summary>
      <div class="details--container">
        <img src={{mockup-img}} class="details--mockup-img" loading="lazy">
        {{#each full-desc as |para|}}
            <p>
              {{{para}}}
            </p>
        {{/each}}
        {{#if link}}
          <a class="portfolio-item--link" href={{link}}>See the project</a>
        {{/if}}
      </div>
    </details>
</div>
